@page
@using MyFramework.Tools
@model ServiceHost.Areas.Administration.Pages.Accounts.Account.IndexModel
@{
}

<div class="row">
	<div class="col-sm-12">
		<h4 class="page-title pull-right">@ViewData["title"]</h4>
		<p class="pull-left">
			<a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Register")">ایجاد ادمین جدید</a>
		</p>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"></h3>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<table id="datatable" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>#</th>
									<th>نام</th>
									<th>نام کاربری</th>
									<th>موبایل</th>
									<th>تاریخ ایجاد</th>
									<th>عملیات</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var account in @Model.Accounts)
								{
									<tr>
										<td>@account.Id</td>
										<td>@account.FullName</td>
										<td>@account.Username</td>
										<td>@account.Mobile</td>
										<td>@account.CreationDate</td>
										<td>
											<a class="btn btn-warning pull-right m-rl-5"
										   href="#showmodal=@Url.Page("./Index", "Edit", new { id = account.Id})">
												<i class="fa fa-edit"></i> ویرایش
											</a>

											<a class="btn btn-primary waves-effect waves-light m-b-5"
										   href="#showmodal=@Url.Page("./Index", "ChangePassword", new { id = account.Id})">
												<i class="fa fa-key"></i> تغییر رمز
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



@section Scripts {
	<script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
	<script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

	<script type="text/javascript">
		$(document).ready(function() {
			$('#datatable').dataTable();
		});
	</script>

	}
